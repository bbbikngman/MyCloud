pipeline {
    agent any
    
    tools {
        maven 'Maven3'
        jdk 'JDK11'
    }
    
    environment {
        BACKEND_REPO = 'https://github.com/bbbikngman/MyCloud'
        BACKEND_BRANCH = 'main'
        BACKEND_DIR = 'FreeCloud/cloudServer'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Clean workspace before checkout
                cleanWs()
                
                // Checkout the backend repository
                git branch: env.BACKEND_BRANCH,
                    url: env.BACKEND_REPO,
                    credentialsId: 'github-credentials'
                
                // Verify we're in the right directory and list contents
                sh 'pwd && ls -la'
            }
        }
        
        stage('Build Backend') {
            steps {
                dir(env.BACKEND_DIR) {
                    // Verify we're in the backend directory
                    sh 'pwd && ls -la'
                    
                    // Build the backend
                    sh '''
                        java -version
                        mvn -version
                        mvn clean package -DskipTests
                    '''
                }
            }
        }
        
        stage('Test Backend') {
            steps {
                dir(env.BACKEND_DIR) {
                    sh 'mvn test'
                }
            }
        }
        
        // Add deployment stage if needed
        stage('Deploy Backend') {
            steps {
                dir('FreeCloud/cloudServer') {
                    sh '''
                        # Copy JAR without sudo
                        cp target/*.jar /opt/myapp/
                        
                        # Start the application (choose one method)
                        # Method 1: Direct Java execution
                        nohup java -jar /opt/myapp/*.jar > /opt/myapp/app.log 2>&1 &
                        
                        # OR Method 2: If using systemd
                        # sudo systemctl restart myapp
                    '''
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
